<iluria-layout>
    <features>
        <banner>true</banner>
        <category-banner>true</category-banner>
        <product-comments>true</product-comments>
        <product-zoom>true</product-zoom>
        <slideshow>true</slideshow>
        <social-media>true</social-media>
        <shop-window>true</shop-window>
    </features>
    <banner>
        <banner-width>980</banner-width>
        <banner-height></banner-height>
        <banner-image></banner-image>
    </banner>
    <category-banner>
        <category-banner-width>908</category-banner-width>
        <category-banner-height></category-banner-height>
    </category-banner>
    <shop-window>
        <shop-window-width>908</shop-window-width>
        <shop-window-height></shop-window-height>
        <shop-window-image></shop-window-image>
    </shop-window>
    <slideshow>
        <slide-width>908</slide-width>
        <slide-height></slide-height>
        <slide-image-1></slide-image-1>
        <slide-image-2></slide-image-2>
        <slide-image-3></slide-image-3>
        <slide-image-4></slide-image-4>
        <slide-image-5></slide-image-5>
    </slideshow>
    <theme>
        <background-image></background-image>
        <background-position>0% 100%</background-position>
        <background-repeat>no-repeat</background-repeat>
        <background-attachment>fixed</background-attachment>
        <background-color>#f2f2f2</background-color>
        <canvas-background-color>#ffffff</canvas-background-color>
        <canvas-text-color>#424242</canvas-text-color>
        <canvas-border-color>#f2f2f2</canvas-border-color>
        <canvas-link-color>#ff0000</canvas-link-color>
        <search-title-color>#0092bf</search-title-color>
        <search-product-title-color>#666666</search-product-title-color>
        <search-price-color>#719622</search-price-color>
        <menu-background-color>#f2f2f2</menu-background-color>
        <menu-text-color>#000000</menu-text-color>
        <cart-background-color>#174165</cart-background-color>
        <cart-text-color>#ffffff</cart-text-color>
        <search-background-color>#f2f2f2</search-background-color>
        <search-text-color>#0092bf</search-text-color>
        <search-field-background-color>#ffffff</search-field-background-color>
        <search-field-text-color>#999999</search-field-text-color>
        <search-button-background-color>#e0e0e0</search-button-background-color>
        <search-button-text-color>#000000</search-button-text-color>
        <category-background-color>#f2f2f2</category-background-color>
        <category-text-color>#0092bf</category-text-color>
        <subcategory-background-color>#f2f2f2</subcategory-background-color>
        <subcategory-text-color>#3891c1</subcategory-text-color>
        <product-title-color>#0092bf</product-title-color>
        <product-description-color>#787878</product-description-color>
        <product-price-color>#0092bf</product-price-color>
        <product-button-text-color>#ffffff</product-button-text-color>
        <product-button-background-color>#174165</product-button-background-color>
    </theme>
</iluria-layout>
